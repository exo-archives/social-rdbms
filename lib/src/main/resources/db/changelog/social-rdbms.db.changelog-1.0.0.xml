  </changeSet>
  
  <changeSet author="social" id="1.0.0-33">
    <addUniqueConstraint columnNames="SPACE_ID, APP_ID"
                         constraintName="UK_SPACE_APP_01"
                         tableName="SOC_APPS"/>

    <!--
