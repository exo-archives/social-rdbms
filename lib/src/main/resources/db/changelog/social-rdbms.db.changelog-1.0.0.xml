      <column name="NAME" type="NVARCHAR(200)">
        <constraints nullable="false"/>
      </column>
      <column name="VALUE" type="NVARCHAR(2000)"/>
    </createTable>    
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci"/>
